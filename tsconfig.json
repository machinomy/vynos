    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "target": "es6",
    "module": "commonjs",
    "declarationDir": "dist/types",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
