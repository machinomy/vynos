{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declarationDir": "dist/types",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@machinomy",
      "types"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "vynos",
    "node_modules/*/index.d.ts"
  ],
  "exclude": [
    "node_modules/homedir/index.d.ts",
    "node_modules/@types/jasmine/index.d.ts",
    "node_modules/@types/lodash/index.d.ts",
    "node_modules/@types/react-hot-loader/index.d.ts"
  ]
}
