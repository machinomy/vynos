// Import all partials
@require './_*.styl'

.terms-header
    position relative
    overflow hidden
    padding-top 15px

  .terms-header__logo
    display block
    margin 0 auto 0 115px

  .terms-header__caption
    text-indent 130px
    position absolute
    left 0
    right 0
    top auto
    bottom 0
    font-size 18px

    .terms-header__caption_text-wrap
      display block

.terms-subheader
  margin 15px 0
  p
    text-align center
    font-size 14px

.terms-read
  p
    text-align center
    text-transform capitalize
    font-size 15px
    font-weight bolder
    a
      color #097EC4
      text-decoration none

.text-center
  text-align: center

.btn-primary
  background-color blue
  .label-primary
    color: #fff
    text-transform uppercase